{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin Girişi{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h1 class="h3 mb-0 font-weight-normal">Yönetici Girişi</h1>
                </div>
                
                <div class="card-body">
                    
                    {# Giriş Başarısız Olduğunda Hata Mesajı #}
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            <i class="fa fa-exclamation-triangle"></i>
                            <strong>Giriş Başarısız:</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                            <small class="d-block mt-1">Lütfen e-posta ve şifrenizi kontrol ediniz.</small>
                        </div>
                    {% endif %}

                    {# Kullanıcı Zaten Giriş Yapmışsa Bilgilendirme #}
                    {% if app.user %}
                        <div class="alert alert-info" role="alert">
                            Zaten **{{ app.user.userIdentifier }}** olarak oturum açmış durumdasınız. 
                            <a href="{{ path('app_logout') }}" class="alert-link">Çıkış Yap</a>
                        </div>
                    {% endif %}

                    {# Ana Giriş Formu #}
                    <form method="post">
                        
                        <div class="form-group mb-3">
                            <label for="username">E-posta</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="email@orneksite.com">
                        </div>

                        <div class="form-group mb-4">
                            <label for="password">Şifre</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Şifrenizi girin">
                        </div>
                        
                        {# CSRF Koruması için gizli alan (ZORUNLU) #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# Remember Me (Eğer security.yaml'de aktifse uncomment edin) #}
                        {#
                        <div class="checkbox mb-3">
                            <input type="checkbox" name="_remember_me" id="_remember_me">
                            <label for="_remember_me">Beni Hatırla</label>
                        </div>
                        #}

                        <button class="btn btn-primary btn-lg btn-block w-100" type="submit">
                            Giriş Yap
                        </button>
                    </form>

                    <!-- Kayıt Ol Linki -->
                    <div class="text-center mt-4">
                        <p class="text-muted">Hesabın yok mu? <a href="{{ path('app_register') }}" class="alert-link font-weight-bold">Kayıt Ol</a></p>
                    </div>
                </div>
                
                <div class="card-footer text-muted text-center">
                    <small>© {{ 'now'|date('Y') }} Uygulama Adı</small>
                </div>
            </div>
            
        </div>
    </div>
</div>
{% endblock %}