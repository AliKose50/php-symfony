{# Partial: Product grid - expects `products` variable #}
<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {% for product in products %}
            {% set mainImage = product.productImages|first %}
            <div class="group bg-slate-800 rounded-2xl shadow hover:shadow-2xl transition-all duration-300 overflow-hidden border border-slate-700 flex flex-col h-full">
                <div class="relative overflow-hidden bg-slate-700" style="padding-top:100%;">
                    {% if mainImage %}
                        {% if mainImage.imageUrl starts with 'http' %}
                            <img src="{{ mainImage.imageUrl }}" alt="{{ product.name }}" class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy"/>
                        {% else %}
                            <img src="{{ asset('uploads/product_images/' ~ mainImage.imageUrl) }}" alt="{{ product.name }}" class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy"/>
                        {% endif %}
                    {% else %}
                        <div class="absolute inset-0 flex items-center justify-center text-slate-300">Resim yok</div>
                    {% endif %}
                </div>
                <div class="p-4 flex flex-col flex-grow">
                    <div class="flex items-center justify-between mb-2">
                        <div>
                            {% if product.category %}
                                <div class="text-xs text-gray-400 font-medium uppercase tracking-wider">{{ product.category.name }}</div>
                            {% endif %}
                            <h3 class="font-semibold text-white text-md mb-1 hover:text-blue-400 transition-colors">{{ product.name }}</h3>
                        </div>
                        <div class="text-right">
                            <div class="text-sm text-gray-400">₺</div>
                            <div class="text-lg font-bold text-blue-400">{{ product.price|number_format(2, ',', '.') }}</div>
                        </div>
                    </div>

                    <p class="text-sm text-gray-300 line-clamp-2 mb-3">{{ product.description|striptags|slice(0,120) ~ (product.description|length > 120 ? '...' : '') }}</p>

                    <div class="mt-auto flex items-center justify-between pt-3">
                        <button type="button" onclick="addToCart({{ product.id }})" class="flex items-center gap-2 px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 active:scale-95 transition-all duration-150 shadow-sm">
                            <i data-lucide="shopping-cart" class="w-4 h-4"></i>
                            <span class="text-sm font-medium">Sepete Ekle</span>
                        </button>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-sm text-gray-300 hover:text-blue-400">Detay</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-4 text-center text-gray-300">Bu kategoride ürün bulunamadı.</div>
        {% endfor %}
    </div>
</div>