{% extends 'base.html.twig' %}

{% block title %}Sepetim{% endblock %}

{% block body %}
<div class="mt-5 min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    {# Navbar #}
    {{ include('partials/_navbar.html.twig') }}

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
        {# Header #}
        <div class="mb-8">
            <a href="{{ path('app_product') }}" class="inline-flex items-center text-gray-300 hover:text-white transition-colors mb-4">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Alışverişe Devam Et
            </a>
            <h1 class="text-3xl sm:text-4xl font-bold text-white">Alışveriş Sepetim</h1>
            <p class="text-gray-300 mt-2">Siparişinizi gözden geçirin ve tamamlayın</p>
        </div>

        <!-- Cart Content -->
        {% if cart.items is empty %}
            <!-- Empty Cart State -->
            <div class="max-w-md mx-auto text-center py-16">
                <div class="bg-white rounded-2xl shadow-xl p-12">
                    <div class="w-24 h-24 bg-gradient-to-br from-purple-100 to-pink-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-12 h-12 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-3">Sepetiniz Boş</h2>
                    <p class="text-gray-600 mb-8">Harika ürünlerimize göz atmaya ne dersiniz?</p>
                    <a href="{{ path('app_product') }}" class="inline-flex items-center justify-center bg-gradient-to-r from-purple-600 to-pink-600 text-white px-8 py-4 rounded-xl font-semibold hover:from-purple-700 hover:to-pink-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        Alışverişe Başla
                    </a>
                </div>
            </div>
        {% else %}
            <!-- Cart Items -->
            <div id="cart-content" class="bg-slate-800 rounded-2xl shadow-xl overflow-hidden border border-slate-700">
                <div class="divide-y divide-slate-600">
                    {% for item in cart.items %}
                    <div id="cart-item-{{ item.id }}" class="cart-item p-6 hover:bg-slate-700 transition-colors">
                        <div class="flex flex-col sm:flex-row gap-4">
                            <!-- Product Image -->
                            <div class="w-full sm:w-32 h-48 sm:h-32 flex-shrink-0 rounded-xl overflow-hidden bg-gradient-to-br from-purple-50 to-pink-50">
                                {% if item.product.image %}
                                    <img src="{{ item.product.image }}" alt="{{ item.product.name }}" class="w-full h-full object-cover">
                                {% else %}
                                    <div class="w-full h-full flex items-center justify-center">
                                        <svg class="w-12 h-12 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Product Details -->
                            <div class="flex-1 min-w-0">
                                <h3 class="text-lg font-semibold text-white mb-1">{{ item.product.name }}</h3>
                                <p class="text-sm text-slate-300 mb-2">{{ item.product.category }}</p>
                                <p class="text-sm text-slate-400">{{ item.quantity }} adet × {{ item.product.price|number_format(2, ',', '.') }} ₺</p>
                            </div>

                            <!-- Quantity Controls & Price -->
                            <div class="flex flex-col sm:flex-row items-end sm:items-center gap-4">
                                <div class="flex items-center border border-slate-600 rounded-lg">
                                    <button onclick="updateCartItem({{ item.id }}, -1)" class="p-2 hover:bg-slate-600 rounded-l-lg transition-colors">
                                        <svg class="w-4 h-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                                        </svg>
                                    </button>
                                    <span class="px-4 py-2 text-center min-w-12 text-white">{{ item.quantity }}</span>
                                    <button onclick="updateCartItem({{ item.id }}, 1)" class="p-2 hover:bg-slate-600 rounded-r-lg transition-colors">
                                        <svg class="w-4 h-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div class="text-right">
                                    <p class="text-lg font-bold text-white">{{ item.lineTotal|number_format(2, ',', '.') }} ₺</p>
                                    <button onclick="removeCartItem({{ item.id }})" class="text-sm text-red-400 hover:text-red-300 transition-colors">
                                        Kaldır
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <!-- Cart Summary -->
                <div class="bg-slate-700 p-6 border-t border-slate-600">
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-lg font-semibold text-white">Toplam</span>
                        <span class="text-2xl font-bold text-purple-400">{{ cart.cartTotal|number_format(2, ',', '.') }} ₺</span>
                    </div>
                    <div class="flex gap-4">
                        <a href="{{ path('app_product') }}" class="flex-1 bg-slate-600 text-slate-200 text-center py-3 rounded-lg font-semibold hover:bg-slate-500 transition-colors">
                            Alışverişe Devam Et
                        </a>
                        <a href="{{ path('app_checkout') }}" class="flex-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-center py-3 rounded-lg font-semibold hover:from-purple-700 hover:to-pink-700 transition-all duration-200">
                            Siparişi Tamamla
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Cart Content Grid -->
        <div id="cart-content" class="hidden grid lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2">
                <div id="cart-items" class="space-y-4">
                    <!-- Items will be loaded here by JavaScript -->
                </div>
            </div>

            <!-- Cart Summary - Sticky Sidebar -->
            <div class="lg:col-span-1">
                <div id="cart-summary" class="bg-white rounded-2xl shadow-xl p-6 sticky top-8">
                    <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2z"></path>
                        </svg>
                        Sipariş Özeti
                    </h2>
                    
                    <div class="space-y-4 mb-6">
                        <div class="flex justify-between items-center text-gray-600">
                            <span class="flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                </svg>
                                Ara Toplam
                            </span>
                            <span id="cart-subtotal" class="font-semibold">0,00 ₺</span>
                        </div>
                        
                        <div class="flex justify-between items-center">
                            <span class="flex items-center text-gray-600">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                                </svg>
                                Kargo
                            </span>
                            <span class="flex items-center text-green-600 font-semibold">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                Ücretsiz
                            </span>
                        </div>
                        
                        <div class="border-t border-gray-200 pt-4">
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-bold text-gray-900">Toplam</span>
                                <span id="cart-total" class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">0,00 ₺</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="space-y-3">
                        <a href="{{ path('app_checkout') }}" class="block w-full text-center bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-4 rounded-xl font-bold hover:from-purple-700 hover:to-pink-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                            <span class="flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                                </svg>
                                Güvenli Ödemeye Geç
                            </span>
                        </a>
                        
                        <div class="flex items-center justify-center text-sm text-gray-500">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                            </svg>
                            Güvenli ödeme garantisi
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {{ include('partials/_footer.html.twig') }}
</div>

<style>
    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .cart-item-enter {
        animation: slideUp 0.3s ease-out;
    }
    
    .cart-item-exit {
        animation: slideUp 0.3s ease-out reverse;
    }
</style>

<script>
// Simple cart update functions
function updateCartItem(itemId, change) {
    const formData = new FormData();
    formData.append('quantity_change', change);
    formData.append('_token', document.querySelector('meta[name="csrf-token"]').getAttribute('content'));

    fetch(`/cart/update/${itemId}`, {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Update quantity display
            const quantitySpan = document.querySelector(`#cart-item-${itemId} .font-medium.px-3`);
            if (quantitySpan) {
                quantitySpan.textContent = data.quantity;
            }
            
            // Update line total
            const lineTotalSpan = document.querySelector(`#cart-item-${itemId} .text-lg.font-bold.text-white`);
            if (lineTotalSpan && data.lineTotal !== undefined) {
                lineTotalSpan.textContent = formatPrice(data.lineTotal);
            }
            
            // Update cart total
            const cartTotalSpan = document.querySelector('.text-2xl.font-bold.text-purple-400');
            if (cartTotalSpan && data.cartTotal !== undefined) {
                cartTotalSpan.textContent = formatPrice(data.cartTotal);
            }
            
            // If quantity is 0, remove the item
            if (data.quantity <= 0) {
                const cartItem = document.getElementById(`cart-item-${itemId}`);
                if (cartItem) {
                    cartItem.remove();
                }
            }
        } else {
            alert(data.message || 'Bir hata oluştu');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Bir hata oluştu');
    });
}

function removeCartItem(itemId) {
    if (!confirm('Bu ürünü sepetten kaldırmak istediğinizden emin misiniz?')) {
        return;
    }

    const formData = new FormData();
    formData.append('_token', document.querySelector('meta[name="csrf-token"]').getAttribute('content'));

    fetch(`/cart/remove/${itemId}`, {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Remove item from DOM
            const cartItem = document.getElementById(`cart-item-${itemId}`);
            if (cartItem) {
                cartItem.remove();
            }
            
            // Update cart total
            const cartTotalSpan = document.querySelector('.text-2xl.font-bold.text-purple-400');
            if (cartTotalSpan && data.cartTotal !== undefined) {
                cartTotalSpan.textContent = formatPrice(data.cartTotal);
            }
        } else {
            alert(data.message || 'Bir hata oluştu');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Bir hata oluştu');
    });
}

function formatPrice(price) {
    return new Intl.NumberFormat('tr-TR', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    }).format(price) + ' ₺';
}
</script>
{% endblock %}