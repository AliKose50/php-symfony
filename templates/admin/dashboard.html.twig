{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Yönetim Paneli{% endblock %}

{% block main %}
<div class="container-xl">
    <div class="page-wrapper">
        <!-- Sayfa Başlığı -->
        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Yönetim Paneli
                    </h2>
                    <div class="text-muted mt-1">Hoş geldiniz, yöneticiliğinize başlayın!</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Görseller / Grafikler Bölümü -->
    <div class="row row-deck row-cards mt-5">
        <!-- Grafik 1: Toplam Ürünler -->
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-truncate">
                        <h3 class="card-title card-title-sm text-muted">
                            <small>Toplam Ürünler</small>
                        </h3>
                    </div>
                    <div class="display-6 fw-bold">1,245</div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar" style="width: 65%" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grafik 2: Toplam Kategoriler -->
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-truncate">
                        <h3 class="card-title card-title-sm text-muted">
                            <small>Toplam Kategoriler</small>
                        </h3>
                    </div>
                    <div class="display-6 fw-bold">28</div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-success" style="width: 40%" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grafik 3: Toplam Sepetler -->
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-truncate">
                        <h3 class="card-title card-title-sm text-muted">
                            <small>Aktif Sepetler</small>
                        </h3>
                    </div>
                    <div class="display-6 fw-bold">342</div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-warning" style="width: 78%" role="progressbar" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grafik 4: Toplam Kullanıcılar -->
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-truncate">
                        <h3 class="card-title card-title-sm text-muted">
                            <small>Toplam Kullanıcılar</small>
                        </h3>
                    </div>
                    <div class="display-6 fw-bold">856</div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-info" style="width: 55%" role="progressbar" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Menü Kartları -->
    <div class="row row-deck row-cards mt-5">
        <div class="col-12">
            <h3 class="mb-3">Hızlı Erişim</h3>
        </div>

        <!-- Kategori Yönetimi -->
        <div class="col-md-6 col-lg-3">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CategoryCrudController').setAction('index') }}" class="card card-link">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-tags fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Kategoriler</h3>
                    <p class="text-muted">Kategorileri yönet</p>
                </div>
            </a>
        </div>

        <!-- Ürün Yönetimi -->
        <div class="col-md-6 col-lg-3">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('index') }}" class="card card-link">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-boxes fa-3x text-success"></i>
                    </div>
                    <h3 class="card-title">Ürünler</h3>
                    <p class="text-muted">Ürünleri yönet</p>
                </div>
            </a>
        </div>

        <!-- Sepet Yönetimi -->
        <div class="col-md-6 col-lg-3">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\CartCrudController').setAction('index') }}" class="card card-link">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-shopping-cart fa-3x text-warning"></i>
                    </div>
                    <h3 class="card-title">Sepetler</h3>
                    <p class="text-muted">Sepetleri yönet</p>
                </div>
            </a>
        </div>

        <!-- Kullanıcı Yönetimi -->
        <div class="col-md-6 col-lg-3">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\UserCrudController').setAction('index') }}" class="card card-link">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-danger"></i>
                    </div>
                    <h3 class="card-title">Kullanıcılar</h3>
                    <p class="text-muted">Kullanıcıları yönet</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .card-link {
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
    }
    .card-link:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        text-decoration: none;
    }
</style>
{% endblock %}
