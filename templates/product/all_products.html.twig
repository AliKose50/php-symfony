{% extends "base.html.twig" %}

{% block title %}T√ºm √úr√ºnler - {{ parent() }}{% endblock %}

{% block body %}
<div class="mt-5 min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        {# app.js loaded via importmap in base.html.twig as a module #}
  
  
  </head>
    {# Navbar'ƒ± buraya √ßaƒüƒ±rƒ±yoruz #}
    {{ include('partials/_navbar.html.twig') }}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-white mb-2">T√ºm √úr√ºnler</h1>
        <p class="text-gray-300">{{ productData|length }} √ºr√ºn bulundu</p>
    </div>

    <!-- Filtre ve Sƒ±ralama Se√ßenekleri -->
    <div class="mb-8 flex gap-4">
        <select id="filterSelect" class="px-4 py-2 border border-slate-600 rounded-lg bg-slate-800 text-white cursor-pointer">
            <option value="">Filtreyi Sƒ±fƒ±rla</option>
            <option value="price-low-high">Fiyat: D√º≈ü√ºkten Y√ºkseƒüe</option>
            <option value="price-high-low">Fiyat: Y√ºksekten D√º≈ü√ºƒüe</option>
        </select>

        <select id="sortSelect" class="px-4 py-2 border border-slate-600 rounded-lg bg-slate-800 text-white cursor-pointer">
            <option value="newest">En Yeni</option>
            <option value="popular">Pop√ºler</option>
            <option value="best-rated">En ƒ∞yi Deƒüerlendirilen</option>
        </select>
    </div>

    <!-- √úr√ºn Grid'i -->
    {% if productData|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for item in productData %}
                {% set product = item.product %}
                {% set isFavorited = item.isFavorited %}
                <div class="bg-slate-800 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-slate-700">
                    <div class="relative h-64 bg-slate-700 overflow-hidden">
                        {% set mainImage = product.productImages|first %}
                        {% if mainImage %}
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="block w-full h-full">
                                {% if mainImage.imageUrl starts with 'http' %}
                                    <img src="{{ mainImage.imageUrl }}" alt="{{ product.name }}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                                {% else %}
                                    <img src="{{ asset('uploads/product_images/' ~ mainImage.imageUrl) }}" alt="{{ product.name }}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                                {% endif %}
                            </a>
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center bg-slate-600">
                                <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-white truncate">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="inline-block hover:text-blue-400">{{ product.name }}</a>
                        </h3>
                        <p class="text-gray-300 text-sm mb-3">{{ product.description[:50] }}...</p>

                        <!-- Yƒ±ldƒ±z Deƒüerlendirmesi -->
                        <div class="flex items-center gap-2 mb-3">
                            <div class="flex gap-1">
                                {% set rating = product.rating|default(4) %}
                                {% for i in 1..5 %}
                                    <svg class="w-4 h-4 {% if i <= rating %}text-yellow-400 fill-yellow-400{% else %}text-slate-500{% endif %}" viewBox="0 0 20 20">
                                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"></path>
                                    </svg>
                                {% endfor %}
                            </div>
                            <span class="text-sm text-gray-500">({{ product.rating|default(0) }} yƒ±ldƒ±z)</span>
                        </div>

                        <!-- Fiyat -->
                        <div class="mb-4">
                            <span class="text-2xl font-bold text-white">{{ product.price|number_format(2, ',', '.') }} ‚Ç∫</span>
                            {% if product.originalPrice|default(false) and product.originalPrice > product.price %}
                                <span class="text-lg text-gray-400 line-through ml-2">{{ product.originalPrice|number_format(2, ',', '.') }} ‚Ç∫</span>
                            {% endif %}
                        </div>

                        <!-- Favori ve Sepet Butonlarƒ± -->
                        <div class="flex gap-2 mb-4">
                            <button class="flex-1 favorite-btn {% if isFavorited %}bg-red-600 hover:bg-red-700{% else %}bg-gray-600 hover:bg-gray-700{% endif %} text-white font-semibold py-2 px-3 rounded-lg transition-colors duration-200" data-product-id="{{ product.id }}">
                                <i data-lucide="heart" class="w-4 h-4 inline mr-1"></i>
                                {{ isFavorited ? 'Favorilerden √áƒ±kar' : 'Favoriye Ekle' }}
                            </button>
                            <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-3 rounded-lg transition-colors duration-200 add-to-cart-btn" data-product-id="{{ product.id }}">
                                üõí Sepet
                            </button>
                        </div>

                        <!-- √úr√ºn Detayƒ± Linki -->
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="block text-center text-blue-600 hover:text-blue-800 text-sm font-medium underline">
                            Detaylƒ± ƒ∞ncelemek
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12">
            <p class="text-gray-600 text-lg">√úr√ºn bulunamadƒ±.</p>
        </div>
    {% endif %}
</div>

<script>
    // Sayfa y√ºklendiƒüinde sepet butonlarƒ±nƒ± baƒüla
    document.addEventListener('DOMContentLoaded', function() {
        bindAddToCartButtons();

        // Filtre ve sƒ±ralama i≈ülevleri (demo)
        document.getElementById('filterSelect')?.addEventListener('change', function() {
            console.log('Filtre se√ßildi:', this.value);
        });

        document.getElementById('sortSelect')?.addEventListener('change', function() {
            console.log('Sƒ±ralama se√ßildi:', this.value);
        });
    });

    function showFlashMessage(message, type) {
        // Basit flash message g√∂sterimi
        const flashDiv = document.createElement('div');
        flashDiv.className = `fixed top-4 right-4 px-6 py-3 rounded-lg text-white z-50 shadow-lg ${
            type === 'success' ? 'bg-green-600' :
            type === 'error' ? 'bg-red-600' : 'bg-blue-600'
        }`;
        flashDiv.innerHTML = `
            <div class="flex items-center">
                <span class="mr-2">${type === 'success' ? '‚úÖ' : type === 'error' ? '‚ùå' : '‚ÑπÔ∏è'}</span>
                <span>${message}</span>
            </div>
        `;
        document.body.appendChild(flashDiv);

        setTimeout(() => {
            flashDiv.remove();
        }, 5000);
    }

    // Sayfa y√ºklendiƒüinde favori butonlarƒ±nƒ± baƒüla
    document.addEventListener('DOMContentLoaded', function() {
        bindFavoriteButtons();
    });
</script>
    {{ include('partials/_footer.html.twig') }}
</div>
{% endblock %}
