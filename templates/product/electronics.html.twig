{% extends "base.html.twig" %}

{% block title %}Elektronik - √úr√ºnler{% endblock %}

{% block body %}
<div class="mt-5 min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    {# Navbar #}
    {{ include('partials/_navbar.html.twig') }}

    <main class="max-w-7xl mx-auto px-6 py-12">
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">Elektronik Koleksiyonu</h1>
            <p class="text-gray-300">En son teknoloji √ºr√ºnleri</p>
        </div>

        <!-- Filtrele ve Sƒ±rala -->
        <div class="flex flex-col md:flex-row md:items-center justify-between mb-10 gap-4">
            <div class="flex items-center gap-3">
                <button class="flex items-center gap-2 px-4 py-2 bg-slate-800 border border-slate-600 rounded-lg text-white hover:bg-slate-700 shadow-sm transition-colors">
                    <i data-lucide="filter" class="w-4 h-4"></i>
                    <span>Filtrele</span>
                </button>
                <select class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-primary-100 shadow-sm cursor-pointer">
                    <option>√ñnerilen Sƒ±ralama</option>
                    <option>En D√º≈ü√ºk Fiyat</option>
                    <option>En Y√ºksek Fiyat</option>
                    <option>En Yeniler</option>
                </select>
            </div>
        </div>

          <!-- √úr√ºn Grid'i -->
    {% if products|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for product in products %}
                <div class="bg-slate-800 rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-slate-700">
                    <div class="relative h-64 bg-slate-700 overflow-hidden">
                        {% set mainImage = product.productImages|first %}
                        {% if mainImage %}
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="block w-full h-full">
                                {% if mainImage.imageUrl starts with 'http' %}
                                    <img src="{{ mainImage.imageUrl }}" alt="{{ product.name }}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                                {% else %}
                                    <img src="{{ asset('uploads/product_images/' ~ mainImage.imageUrl) }}" alt="{{ product.name }}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                                {% endif %}
                            </a>
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center bg-slate-600">
                                <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-white truncate">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="inline-block hover:text-blue-400">{{ product.name }}</a>
                        </h3>
                        <p class="text-gray-300 text-sm mb-3">{{ product.description[:50] }}...</p>

                        <!-- Yƒ±ldƒ±z Deƒüerlendirmesi -->
                        <div class="flex items-center gap-2 mb-3">
                            <div class="flex gap-1">
                                {% set rating = product.rating|default(4) %}
                                {% for i in 1..5 %}
                                    <svg class="w-4 h-4 {% if i <= rating %}text-yellow-400 fill-yellow-400{% else %}text-slate-500{% endif %}" viewBox="0 0 20 20">
                                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"></path>
                                    </svg>
                                {% endfor %}
                            </div>
                            <span class="text-sm text-gray-500">({{ product.rating|default(0) }} yƒ±ldƒ±z)</span>
                        </div>

                        <!-- Fiyat -->
                        <div class="mb-4">
                            <span class="text-2xl font-bold text-white">{{ product.price|number_format(2, ',', '.') }} ‚Ç∫</span>
                            {% if product.originalPrice|default(false) and product.originalPrice > product.price %}
                                <span class="text-lg text-gray-400 line-through ml-2">{{ product.originalPrice|number_format(2, ',', '.') }} ‚Ç∫</span>
                            {% endif %}
                        </div>

                        <!-- Favori ve Sepet Butonlarƒ± -->
                        <div class="flex gap-2 mb-4">
                            {% if app.user %}
                            <button class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 favorite-btn" data-product-id="{{ product.id }}">
                                ‚ù§Ô∏è Favori
                            </button>
                            {% else %}
                            <button class="flex-1 bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg cursor-not-allowed" disabled title="Favori eklemek i√ßin giri≈ü yapƒ±n">
                                ‚ù§Ô∏è Favori
                            </button>
                            {% endif %}
                            <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 add-to-cart-btn" data-product-id="{{ product.id }}">
                                üõí Sepet
                            </button>
                        </div>

                        <!-- √úr√ºn Detayƒ± Linki -->
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="mt-2 block text-center text-blue-600 hover:text-blue-800 text-sm font-medium underline">
                            Detaylƒ± ƒ∞ncelemek
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12">
            <p class="text-gray-600 text-lg">√úr√ºn bulunamadƒ±.</p>
        </div>
    {% endif %}
</div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.replace();
            bindAddToCartButtons();
            bindFavoriteButtons();
            loadFavoriteStates();
        });

        function bindFavoriteButtons() {
            document.querySelectorAll('.favorite-btn').forEach(button => {
                button.addEventListener('click', async function() {
                    const productId = this.getAttribute('data-product-id');
                    await toggleFavorite(productId, this);
                });
            });
        }

        async function toggleFavorite(productId, button) {
            // Kullanƒ±cƒ± giri≈ü kontrol√º
            {% if not app.user %}
            alert('Favori eklemek i√ßin l√ºtfen giri≈ü yapƒ±n!');
            return;
            {% endif %}

            try {
                const response = await fetch(`/favorite/toggle/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    credentials: 'same-origin'
                });

                const data = await response.json();

                if (data.success) {
                    if (data.isFavorite) {
                        button.classList.remove('bg-red-600', 'hover:bg-red-700');
                        button.classList.add('bg-red-800', 'hover:bg-red-900');
                        button.innerHTML = 'üíñ Favoride';
                        showFlashMessage('√úr√ºn favorilerinize eklendi!', 'success');
                    } else {
                        button.classList.remove('bg-red-800', 'hover:bg-red-900');
                        button.classList.add('bg-red-600', 'hover:bg-red-700');
                        button.innerHTML = '‚ù§Ô∏è Favori';
                        showFlashMessage('√úr√ºn favorilerinizden √ßƒ±karƒ±ldƒ±!', 'info');
                    }
                } else {
                    showFlashMessage('Bir hata olu≈ütu', 'error');
                }
            } catch (error) {
                console.error('Favori i≈ülemi hatasƒ±:', error);
                showFlashMessage('Bir hata olu≈ütu', 'error');
            }
        }

        async function loadFavoriteStates() {
            {% if app.user %}
            document.querySelectorAll('.favorite-btn').forEach(async button => {
                const productId = button.getAttribute('data-product-id');
                try {
                    const response = await fetch(`/favorite/check/${productId}`, {
                        credentials: 'same-origin'
                    });
                    const data = await response.json();

                    if (data.isFavorite) {
                        button.classList.remove('bg-red-600', 'hover:bg-red-700');
                        button.classList.add('bg-red-800', 'hover:bg-red-900');
                        button.innerHTML = 'üíñ Favoride';
                    }
                } catch (error) {
                    console.error('Favori durumu kontrol hatasƒ±:', error);
                }
            });
            {% endif %}
        }

        function showFlashMessage(message, type) {
            // Basit flash message g√∂sterimi
            const flashDiv = document.createElement('div');
            flashDiv.className = `fixed top-4 right-4 px-6 py-3 rounded-lg text-white z-50 shadow-lg ${
                type === 'success' ? 'bg-green-600' :
                type === 'error' ? 'bg-red-600' : 'bg-blue-600'
            }`;
            flashDiv.innerHTML = `
                <div class="flex items-center">
                    <span class="mr-2">${type === 'success' ? '‚úÖ' : type === 'error' ? '‚ùå' : '‚ÑπÔ∏è'}</span>
                    <span>${message}</span>
                </div>
            `;
            document.body.appendChild(flashDiv);

            setTimeout(() => {
                flashDiv.remove();
            }, 5000);
        // Sayfa y√ºklendiƒüinde favori butonlarƒ±nƒ± baƒüla
        document.addEventListener('DOMContentLoaded', function() {
            bindFavoriteButtons();
        });
    </script>
    {{ include('partials/_footer.html.twig') }}
</div>
{% endblock %}
